    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Motorizare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].An)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Cutie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Kilometraj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Cap_cil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Putere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Euro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Car)
        {
            <tr>
                <td>
                     <img src="@Html.DisplayFor(modelItem => item.Img)" height="150" width="150" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Motorizare)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.An)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cutie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kilometraj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cap_cil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Putere)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Euro)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
